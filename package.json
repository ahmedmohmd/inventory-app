{
	"name": "express-template",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start:dev": "nodemon index.ts",
		"start:prod": "node ./dist/index.js",
		"build": "tsc",
		"format": "prettier . --write",
		"lint": "eslint .",
		"test:run": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:preview": "npx vite preview --outDir html",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --quiet --fix"
		],
		"*.{json,js,ts}": [
			"prettier --write --ignore-unknown"
		]
	},
	"keywords": [
		"simple",
		"keywords",
		"example"
	],
	"author": "Ahmed Muhammad",
	"license": "ISC",
	"private": true,
	"description": "Simple Description for the App",
	"devDependencies": {
		"@eslint/js": "^9.8.0",
		"@types/bcrypt": "~10.0.28-alpha",
		"@types/compression": "~1.7.5",
		"@types/cors": "~2.8.17",
		"@types/eslint": "~9.6.0",
		"@types/eslint__js": "~8.42.3",
		"@types/eslint-config-prettier": "~6.11.3",
		"@types/express": "~4.17.21",
		"@types/http-errors": "~2.0.4",
		"@types/jsonwebtoken": "~9.0.6",
		"@types/node": "^22.1.0",
		"@types/pg": "^8.11.6",
		"@types/supertest": "~6.0.2",
		"@vitest/coverage-v8": "^2.0.5",
		"@vitest/ui": "^2.0.5",
		"drizzle-kit": "^0.24.0",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.9.0",
		"lint-staged": "^15.2.8",
		"nodemon": "^3.1.4",
		"prettier": "^3.3.3",
		"supertest": "^7.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.1",
		"typesync": "^0.13.0",
		"vitest": "^2.0.5"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
